
//- HTML modal cart
section.modal-04
	.container.mt-5
		form(action="")
			.row
				.col-md-6
					h4.title Địa chỉ ban đầu
					.group_local
						input#default(type="radio" name='local')
						label(for="default") Sử dụng địa chỉ khi đăng ký
						p Địa chỉ đăng ký ban đầu: 
							i 109/15 đường Hiệp Bình, Hiệp Bình Phước, Quận Thủ Đức
						p Số điện thoại đăng ký ban đầu: 
							i 0966643251
				.col-md-6
					h4.title Địa chỉ giao hàng mới
					.group_local
							input#new(type="radio"  name='local')
							label(for="new") Sử dụng địa chỉ mới
					.group_local_new
						select#city(name="" )
							option(value="0") Thành phố / Tỉnh
							option(value="1") Thành 1
							option(value="2") Thành 2
							option(value="3") Thành 3
							option(value="4") Thành 4
						select#district(name="" )
							option(value="0") Quận / Huyện
					.group_more
						input#street.mt-3(type="text", placeholder="Số nhà và tên đường")
						input#number.mt-3.w-100(type="text", placeholder="Số điện thoại")
						br
						textarea#more.mt-3(name="", cols="30", rows="5" placeholder='Note về việc giao hàng')
			.row
				.col-md-6
					button.mt-2(type='button' data-model-target='#tab01_cart').hover.btn_more.bg-info.btn_back Quay lại
				.col-md-6
					button.mt-2(type='button' data-model-target='#tab03_cart').hover.btn_more.bg-success.btn_back Tiến hàng thanh toán